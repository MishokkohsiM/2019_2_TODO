<form class="profileForm">
    <header class="profileForm__header">
        <div class="profileForm__c">
            <a class="profileForm__close-button" href="/profile">&#215;</a>
        </div>
        <img class="profileForm__avatar" src="{{avatar}}">
        <div class="profileForm__container">
            <input type="file" class="profileForm__file-input">
            <button class="button profileForm__button"> Upload avatar</button>
        </div>
    </header>
    <div class="profileForm__container">
        <input class="profileForm__input" placeholder="{{username}}">
        <input class="profileForm__input" placeholder="password">
        <input class="profileForm__input" placeholder="password repeat">
        <a class="button profileForm__button" href="/profileChange">Change</a>
    </div>
</form>
